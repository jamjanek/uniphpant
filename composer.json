{
    "name": "secalith/uniphpant",
    "description": "A Slim Framework SPA application.",
    "keywords": [
        "microframework",
        "rest",
        "router",
        "psr7"
    ],
    "homepage": "https://github.com/janfkowalski/uniphpant",
    "license": "MIT",
    "authors": [
        {
            "name": "Jan F Kowalski",
            "email": "jan@secalith.pl",
            "homepage": "https://www.uniphpant.secalith.pl/"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-bcmath": "*",
        "ext-bz2": "*",
        "ext-curl": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-xml": "*",
        "laminas/laminas-config": "^3.5",
        "laminas/laminas-config-aggregator": "^1.5",
        "laminas/laminas-uri": "^2.8",
        "monolog/monolog": "^2.2",
        "php-di/php-di": "^6.3",
        "robmorgan/phinx": "^0.12.7",
        "slim/php-view": "^3.1",
        "slim/psr7": "^1.3",
        "slim/slim": "^4.7",
        "symfony/yaml": "^5.3"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8089-t public"
    }
}
